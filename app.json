{
    "name": "bundle update as CI",
    "keywords": [
        "CircleCI",
        "bundler"
    ],
    "env": {
        "GITHUB_USERNAME": {
            "description": "Your GitHub account"
        },
        "GITHUB_REPONAME": {
            "description": "Your GitHub repository name"
        },
        "BRANCH": {
            "value": "master"
        },
        "CIRCLECI_TOKEN": {
            "description": "See https://circleci.com/docs/api#projects"
        },
        "EXEC_DAYS": {
            "description": "ex. 'Sun or Mon,Wed,Fri' if unset, executes every day.",
            "required": false
        }
    },
    "addons": ["scheduler:standard"]
}
